<?xml version="1.0" encoding="utf-8"?>
<ScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".TargetActivity">
<androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:descendantFocusability="beforeDescendants"
        android:focusableInTouchMode="true"
        tools:context=".TargetActivity"
>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
            android:id="@+id/linearLayout4" android:background="@drawable/back">
        <TextView
                android:text="Range:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView" android:layout_weight="0.5"
                android:textAlignment="center"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/rngLabel" android:layout_weight="1"/>
        <TextView
                android:text="Altitude difference:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView8" android:layout_weight="0.5"
                android:textAlignment="center"/>
        <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/altDifLabel" android:layout_weight="1"/>
    </LinearLayout>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout4" android:id="@+id/linearLayout5">
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/back" android:gravity="center">
            <Button
                    android:text="+"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonPlus" android:textSize="18sp"
                    android:onClick="onClickPlus"/>
            <Button
                    android:text="-"
                    android:layout_width="40dp"
                    android:layout_height="wrap_content"
                    android:id="@+id/buttonMinus" android:textSize="18sp"
                    android:onClick="onClickMinus"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/back"
                android:gravity="center" android:paddingVertical="10dp">
            <TextView
                    android:text="Ch."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textView5"
                    android:textSize="24sp" android:textAlignment="center"
                    android:layout_marginBottom="0dp"/>
            <TextView
                    android:text="@string/zero"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewCh"
                    android:layout_marginTop="0dp" android:textSize="36sp"
                    android:textColor="@color/colorPrimaryDark" android:textAlignment="center"
                    android:layout_marginStart="0dp"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@drawable/back"
                android:gravity="center" android:paddingVertical="10dp">
            <TextView
                    android:text="@string/azimuth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView3"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="0dp"/>
            <TextView
                    android:text="@string/zeros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewAz"
                    android:textSize="36sp"
                    android:textColor="@android:color/holo_red_dark"
                    android:textAlignment="center"
                    android:layout_marginTop="0dp"
            />
            <TextView
                    android:text="@string/zeroDegrees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewAz360"
                    android:textColor="@android:color/holo_red_dark"/>
        </LinearLayout>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:background="@drawable/back"
                android:gravity="center" android:paddingVertical="10dp">
            <TextView
                    android:text="@string/elevation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textView4"
                    android:textSize="24sp"
                    android:textAlignment="center"
                    android:layout_marginBottom="0dp"/>
            <TextView
                    android:text="@string/zeros"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/textViewEl"
                    android:textColor="@android:color/holo_green_dark"
                    android:textSize="36sp"
                    android:textAlignment="center"
                    android:layout_marginTop="0dp"
            />
            <TextView
                    android:text="@string/zeroDegrees"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/textViewEl360"
                    android:textColor="@android:color/holo_green_dark"/>
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>